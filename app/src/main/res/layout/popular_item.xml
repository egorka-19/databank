<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Картинка слева 1:1, во всю высоту карточки -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="116dp"
            android:layout_height="136dp"
            android:scaleType="centerCrop"
            android:src="@drawable/izo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/pop_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="14dp" />

        <!-- Название и рейтинг -->
        <TextView
            android:id="@+id/pop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="4dp"
            android:text="Название события"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/pop_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/address_button" />

        <!-- Краткая информация -->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="Краткое описание мероприятия"
            android:textSize="16sp"
            android:maxLines="3"
            app:layout_constraintTop_toBottomOf="@id/pop_name"
            app:layout_constraintStart_toEndOf="@id/pop_img"
            app:layout_constraintEnd_toStartOf="@id/address_button" />

        <!-- Кнопка адреса справа как ImageButton с иконкой narrow -->
        <ImageButton
            android:id="@+id/address_button"
            android:layout_width="67dp"
            android:layout_height="135dp"
            android:background="@null"
            android:contentDescription="@string/app_name"

            android:paddingLeft="1dp"

            android:paddingRight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/narrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Цена внизу -->
        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:text="+500р."
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/pop_img"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
